export type IndustrySectorCode = keyof typeof INDUSTRY_SECTORS;

export type SectorCategory = 
  | 'healthcare'    // Здравоохранение и фармацевтика
  | 'energy'        // Энергетика
  | 'industry'      // Промышленность
  | 'agriculture'   // Сельское хозяйство и пищевая
  | 'services'      // Услуги
  | 'culture';      // Культура и спорт

/**
 * Валидация кода сферы
 */
export function validateSectorCode(code: string): boolean {
  return code in INDUSTRY_SECTORS;
}

/**
 * Получение сфер по категории
 */
export function getSectorsByCategory(category: SectorCategory): Array<{
  code: IndustrySectorCode;
  name: string;
}> {
  return Object.entries(INDUSTRY_SECTORS)
    .filter(([, sector]) => sector.category === category)
    .map(([code, sector]) => ({
      code: code as IndustrySectorCode,
      name: sector.name,
    }));
}

/**
 * Поиск сферы по названию
 */
export function searchSectors(query: string): Array<{
  code: IndustrySectorCode;
  name: string;
}> {
  const lowerQuery = query.toLowerCase();
  return Object.entries(INDUSTRY_SECTORS)
    .filter(([, sector]) => sector.name.toLowerCase().includes(lowerQuery))
    .map(([code, sector]) => ({
      code: code as IndustrySectorCode,
      name: sector.name,
    }));
}
