export type LegalActType = keyof typeof LEGAL_ACT_TYPES;

/**
 * Валидация кода НПА для льготы
 */
export function validateLegalActCode(code: string): {
  valid: boolean;
  type?: LegalActType;
  error?: string;
} {
  for (const [key, value] of Object.entries(LEGAL_ACT_TYPES)) {
    if (value.regex.test(code)) {
      return { valid: true, type: key as LegalActType };
    }
  }
  
  // Проверка частичного соответствия для подсказки
  const prefix = code.split(/[\s№]/)[0];
  if (prefix in LEGAL_ACT_TYPES) {
    return {
      valid: false,
      error: `Неверный формат для ${prefix}. Ожидается: ${LEGAL_ACT_TYPES[prefix as LegalActType].format}`,
    };
  }
  
  return {
    valid: false,
    error: 'Неизвестный тип НПА. Допустимые: МД, НК, ТК, ЗН, УП, ПП, РП, ПКМ, РКМ, МЮ',
  };
}

