## TypeScript данные

```typescript
export const PREFERENCE_CODES = {
  // Общие коды
  '0': { name: 'Льготы не предоставлены', basis: null },
  'А': { name: 'По международным соглашениям', basis: 'international' },
  'Б': { name: 'По законам РУз', basis: 'law' },
  'В': { name: 'По кодексам РУз', basis: 'code' },
  'Г': { name: 'По решениям Президента', basis: 'president' },
  'Д': { name: 'По решениям Правительства', basis: 'government' },
  // Специальные коды для пошлин
  'Е': { name: 'Режим свободной торговли', basis: 'free_trade' },
  'Ж': { name: 'Режим наибольшего благоприятствования', basis: 'mfn' },
} as const;

export interface PreferenceCode {
  customs_fee: '0' | 'А' | 'Б' | 'В' | 'Г' | 'Д';
  customs_duty: '0' | 'А' | 'Б' | 'В' | 'Г' | 'Д' | 'Е' | 'Ж';
  excise: '0' | 'А' | 'Б' | 'В' | 'Г' | 'Д';
  vat: '0' | 'А' | 'Б' | 'В' | 'Г' | 'Д' | 'Е';
}

export function parsePreferenceCode(code: string): PreferenceCode | null {
  if (code.length !== 4) return null;
  
  return {
    customs_fee: code[0] as PreferenceCode['customs_fee'],
    customs_duty: code[1] as PreferenceCode['customs_duty'],
    excise: code[2] as PreferenceCode['excise'],
    vat: code[3] as PreferenceCode['vat'],
  };
}

export function buildPreferenceCode(pref: PreferenceCode): string {
  return `${pref.customs_fee}${pref.customs_duty}${pref.excise}${pref.vat}`;
}
```

